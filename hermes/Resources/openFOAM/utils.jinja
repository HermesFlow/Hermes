{%- macro toPoint(pt) -%}
    {%- if pt is string -%}
        ({{ pt
            | replace('[', '')
            | replace(']', '')
            | replace(',', ' ')
            | replace('(', '')
            | replace(')', '')
            | trim
        }})
    {%- elif pt is sequence -%}
        ({{ pt | join(' ') }})
    {%- elif pt is number -%}
        {{ pt }}
    {%- else -%}
        (INVALID_POINT)
    {%- endif -%}
{%- endmacro %}



{%- macro toBool(var) -%}
  {%- if var%}true{%- else%}false{%endif%}
{%- endmacro %}

{%- macro toList(lst) -%}
  ({%- for val in lst %} {{ val }} {%- endfor %})
{%- endmacro %}

{%- macro handleValue(params) -%}
{%- for paramName,paramValue in params.items() -%}
{% if paramValue is sequence %}
{{paramName}} {% for valueItem in paramValue -%}{{valueItem}}{%- endfor %};
{%- else %}
{{paramName}} {{paramValue}};
{%- endif %}
{% endfor -%}
{%- endmacro %}
