{%- import "openFOAM/mesh/toPoint.jinja" %}

convertToMeters {{geometry.convertToMeters}};

vertices
(
    {%- for pnt in vertices %}
        toPoint(vertices)
    {%- endfor %}
);





blocks
(
    hex (0 1 2 3 4 5 6 7)
    toPoint(geometry.cellCount)
    simpleGrading
    toPoint(geometry.grading)
);

edges
(
);

boundary
(
    {%- for bndry in boundary %}
        {{bndry.name }}
        {
            type {{bndry.type}};
            faces
            (
                {%- for indx in range(bndry.faces|length)%}
                       toPoint(bndry.faces[indx])
                {%- endfor %}

            );
            {%- if bndry['Type'] =='cyclic' %}
                neighbourPatch {{bndry.neighbourPatch}};
            {%- endif %}
        }
    {%- endfor %}
);

mergePatchPairs
(
);

